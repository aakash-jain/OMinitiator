<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/passang"
    tools:context="com.example.tenzind.ominitiator.Server">

    <Button
        android:id="@+id/cancel"
        style="@android:style/Widget.Material.Button.Inset"
        android:layout_width="215dp"
        android:layout_height="51dp"
        android:layout_above="@+id/forceclose"
        android:layout_alignLeft="@+id/forceclose"
        android:layout_alignStart="@+id/forceclose"
        android:layout_marginBottom="134dp"
        android:text="Cancel Order"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="110dp" />

    <EditText
    android:id="@+id/canceledittext"
    style="@android:style/Widget.Holo.AutoCompleteTextView"
    android:layout_width="215dp"
    android:layout_height="51dp" android:textColor="#FFFFFF"
    android:layout_above="@+id/cancel"
    android:layout_centerHorizontal="true" android:hint="Enter Order Id" android:text=""
    android:layout_marginBottom="32dp" android:backgroundTint="@android:color/holo_green_light"
    android:ems="10"
    android:inputType="text"/>

    <EditText
        android:id="@+id/forceedittext"
        style="@android:style/Widget.Holo.AutoCompleteTextView"
        android:layout_width="215dp"
        android:layout_height="51dp"
        android:layout_above="@+id/forceclose"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:inputType="text"
        android:hint="Enter Order Id"
        android:backgroundTint="@android:color/holo_green_light"/>

    <Button
        android:id="@+id/forceclose"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="215dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:text="FORCE CLOSE"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="191dp" />

</RelativeLayout>
